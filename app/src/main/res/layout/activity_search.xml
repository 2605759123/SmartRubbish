<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#ffffff">

    <scut.carson_ho.searchview.SearchView
        android:layout_marginTop="30dp"
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textSizeSearch="5dp"
        app:textColorSearch="#9b9b9b"
        app:textHintSearch="输入查询关键字"
        app:searchBlockHeight="150"
        app:searchBlockColor="#ffffff"
        />
    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_view">
        <TextView
            android:id="@+id/suosuojianyi"
            android:layout_marginTop="3dp"
            android:paddingLeft="5dp"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索建议"/>
        <!--<View-->
            <!--android:id="@+id/view3"-->
            <!--android:layout_below="@id/suosuojianyi"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_marginEnd="3dp"-->
            <!--android:background="#aa7F7F7F"/>-->
    </RelativeLayout>


    <com.bzu.gxs.smartrubbish.FlowLayout.FlowLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_below="@id/rela"
        android:id="@+id/flow"/>
</RelativeLayout>
