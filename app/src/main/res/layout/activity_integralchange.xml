<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/me_title"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:layout_centerVertical="true">
            <org.raphets.roundimageview.RoundImageView
                android:id="@+id/touxiang2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/touxiang"
                app:border_width="3dp"
                app:border_color="@android:color/white"
                app:leftBottom_corner_radius="30dp"
                app:leftTop_corner_radius="30dp"
                app:rightBottom_corner_radius="30dp"
                app:rightTop_corner_radius="30dp"
                app:type="round" />
            <TextView
                android:id="@+id/accountname2"
                android:paddingTop="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/touxiang2"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:text="2605759123"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="感谢您支持公益事业"
                android:layout_below="@id/accountname2"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@id/accountname2"/>
        </RelativeLayout>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="以下是历史消息"
        android:textColor="#999999"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:textColor="#FF000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <RelativeLayout
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ListView
            android:layout_marginTop="5dp"
            android:id="@+id/list_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ListView>
    </RelativeLayout>
</LinearLayout>